<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskActivity"
    android:layout_margin="10dp">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout_select_no"
        android:layout_marginTop="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/select_no"
            android:hint="Enter The Number."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/dial_btn"
        android:text="Dial"
        android:textSize="25dp"
        android:textStyle="bold"
        app:cornerRadius="40dp"
        android:layout_marginTop="40sp"
        android:layout_marginStart="120dp"
        android:layout_marginHorizontal="110dp"
        app:layout_constraintTop_toBottomOf="@id/layout_select_no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/call_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/call_btn"
        android:text="Call"
        android:textSize="25dp"
        android:textStyle="bold"
        app:cornerRadius="40dp"
        android:layout_marginTop="40sp"
        android:layout_marginHorizontal="110dp"
        app:layout_constraintTop_toBottomOf="@id/layout_select_no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dial_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>